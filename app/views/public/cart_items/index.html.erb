<P>ショッピングカート</P>
<%= link_to "カートを空にする", public_cart_items_destroy_all_path, class: "btn btn-danger" %>

<% @cart_items.each do |cart_item| %>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>商品名</th>
                <th>単価(税込)</th>
                <th>数量</th>
                <th>小計</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.price %></td>
                <td><%= cart_item.item.name %></td>
                <td><%= cart_item.item.price * cart_item.amount %></td>
                <td><%= link_to "削除する", public_cart_items_destroy_path, class: "btn btn-danger" %></td>
            </tr>
        </tbody>
    </table>
<% end %>